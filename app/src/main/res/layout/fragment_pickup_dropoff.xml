<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

  <com.transportation.letsride.feature.pickupdropoff.ui.widget.AddressView
      android:id="@+id/addressPickupView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:addressHint="Pickup location"
      app:addressType="Pickup"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/dividerColor"/>

  <com.transportation.letsride.feature.pickupdropoff.ui.widget.AddressView
      android:id="@+id/addressDropOffView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:addressHint="Where to?"
      app:addressType="Destination"/>

</LinearLayout>
