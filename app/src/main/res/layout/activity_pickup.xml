<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.transportation.letsride.feature.pickup.ui.activity.PickupActivity">

  <FrameLayout
      android:id="@+id/pickupMapContainer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>


  <ImageView
      android:id="@+id/imagePickupMapMarker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@null"
      app:srcCompat="@drawable/ic_pin"
      android:cropToPadding="true"
      android:baselineAlignBottom="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/pickupMapContainer"
      app:layout_constraintBottom_toTopOf="@+id/viewPickupCenterPoint"/>

  <View
      android:id="@+id/viewPickupCenterPoint"
      android:layout_width="1dp"
      android:layout_height="1dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>


  <FrameLayout
      android:id="@+id/pickupRouteContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/pickupMapContainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
