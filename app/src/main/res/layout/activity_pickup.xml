<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pickupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.transportation.letsride.feature.pickup.ui.activity.PickupActivity">

  <FrameLayout
      android:id="@+id/pickupMapContainer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <com.transportation.letsride.feature.map.ui.widget.PinView
      android:id="@+id/viewPickupPin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <FrameLayout
      android:id="@+id/pickupDropOffAddressContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/buttonPickupMyLocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:visibility="gone"
      app:backgroundTint="@color/colorPrimaryDark"
      app:elevation="3dp"
      app:fabSize="normal"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/ic_near_me"
      app:layout_constraintBottom_toTopOf="@+id/estimatesContainer"/>

  <FrameLayout
      android:id="@+id/estimatesContainer"
      android:layout_width="0dp"
      android:layout_height="150dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
